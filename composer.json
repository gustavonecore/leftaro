{
	"name": "gustavonecore/leftaro",
	"description": "PSR-[7,15] compliant micro framework for restful API.",
	"type": "library",
	"license": "MIT",
	"authors": [
		{ "name": "Gustavo Delgado" }
	],
	"require": {
        "php": ">=7.0",
        "psr/http-message": "~1.0",
		"nikic/fast-route": "^1.2",
		"pimple/pimple": "^3.0",
		"zendframework/zend-diactoros": "^1.6"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.3"
	},
    "autoload": {
    	"psr-4": {
     		"GCore\\Leftaro\\": "src/",
            "GCore\\Leftaro\\Test\\": "tests/"
    	}
    },
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},

    "minimum-stability": "dev",
    "prefer-stable": true
}
